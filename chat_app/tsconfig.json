{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "paths": {
      "src/*": ["./app/*"],
      "routes/*": ["./app/routes/*"],
      "root/*": ["./*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "services/auth"
  ]
}
